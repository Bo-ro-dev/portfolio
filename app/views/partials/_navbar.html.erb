<nav class="bg-gray-800 p-4">
  <div class="container mx-auto flex justify-between items-center">
    <div class="text-white font-bold text-xl">My App</div>

    <% if user_signed_in? %>
      <!-- Link do wylogowywania dla zalogowanego użytkownika -->
      <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'text-white hover:text-gray-300 px-4 py-2' %>
    <% else %>
      <!-- Linki do logowania i rejestracji dla niezalogowanego użytkownika -->
      <%= link_to 'Sign in', new_user_session_path, class: 'text-white hover:text-gray-300 px-4 py-2' %>
      <%= link_to 'Sign up', new_user_registration_path, class: 'text-white hover:text-gray-300 px-4 py-2' %>
    <% end %>
  </div>
</nav>