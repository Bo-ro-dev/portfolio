
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg overflow-hidden shadow-md p-8">
      <h2 class="text-2xl font-semibold mb-6">Please complete your profile before further proceeding</h2>

      <%= form_for @user, url: users_profile_path(@user), method: :patch do |f| %>
        <% if @user_errors %>
          <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <ul>
              <% @user_errors.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :first_name, value: @user.first_name, placeholder: 'required', class: "border rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :last_name, value: @user.last_name, placeholder: 'required', class: "border rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :date_of_birth, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.date_field :date_of_birth, value: @user.date_of_birth, class: "border rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500" %>
        </div>

        <div class="mb-6">
          <%= f.submit 'Update Profile', class: "bg-blue-500 text-white py-2 px-4 rounded focus:outline-none hover:bg-blue-600" %>
        </div>
      <% end %>
    </div>
  </div>
</main>

