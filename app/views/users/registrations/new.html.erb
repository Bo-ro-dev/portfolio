<div class="max-w-md w-full bg-white p-8 rounded shadow-md">
  <h2 class="text-3xl font-semibold mb-6 text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "text-gray-600 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded-md px-3 py-2 focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-600 mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-gray-500 text-sm mb-2"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "border rounded-md px-3 py-2 focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-600 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded-md px-3 py-2 focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="flex items-center justify-center">
      <%= f.submit "Sign Up", class: "bg-blue-500 text-white py-2 px-4 rounded focus:outline-none hover:bg-blue-600" %>
    </div>
  <% end %>

<%= render "users/shared/links" %>
