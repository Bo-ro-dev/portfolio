<div class="max-w-md w-full bg-white p-8 rounded shadow-md">
  <h2 class="text-3xl font-semibold mb-6 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, class: "text-gray-600 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded-md px-3 py-2 focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-600 mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "border rounded-md px-3 py-2 focus:outline-none focus:border-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "text-blue-500" %>
        <%= f.label :remember_me, class: "text-gray-600 ml-2" %>
      </div>
    <% end %>

    <div class="flex items-center justify-center">
      <%= f.submit "Log in", class: "bg-blue-500 text-white py-2 px-4 rounded focus:outline-none hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>